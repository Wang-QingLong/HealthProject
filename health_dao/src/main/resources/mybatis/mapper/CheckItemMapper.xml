<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--配置接口dao的全限定类名-->
<mapper namespace="com.itcast.mapper.CheckItemMapper">

    <!--新增-->
    <insert id="add">
    INSERT INTO t_checkitem ( CODE, NAME, sex, age, price, type, remark, attention )
  VALUES
	(#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention});
    </insert>

    <!--编辑-->
    <update id="edit">
   update  t_checkitem  set CODE=#{code},NAME=#{name},sex=#{sex},age=#{age},price=#{price},type=#{type},remark=#{remark},attention=#{attention}
   where id = #{id}
    </update>
    <!--删除-->
    <delete id="delete">
        delete  from  t_checkitem  where id= #{id_}
    </delete>

    <!--分页查询-->
    <select id="findPage" resultType="com.itcast.pojo.CheckItem">

        select * from t_checkitem
        <if test="queryString !=null and queryString.trim().length > 0">
            where code like '%' #{queryString} '%'
            or name like '%' #{queryString} '%'
        </if>

    </select>

    <!--Id查询-->
    <select id="findById" resultType="com.itcast.pojo.CheckItem">

     select * from t_checkitem where id= #{row}

    </select>
</mapper>